<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavQurt.Server.App.Views.LoginPage"
             Title="Login">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">
            <Label Text="Welcome" FontSize="24" HorizontalOptions="Center" />

            <Entry Placeholder="Username"
                   Text="{Binding UserName}"
                   Keyboard="Text"
                   ClearButtonVisibility="WhileEditing" />

            <Entry Placeholder="Password"
                   Text="{Binding Password}"
                   IsPassword="True"
                   ClearButtonVisibility="WhileEditing" />

            <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding HasError}" />

            <Button Text="Login"
                    Command="{Binding LoginCommand}"
                    IsEnabled="{Binding IsNotBusy}" />

            <Button Text="Sign up"
                    Command="{Binding NavigateToSignUpCommand}"
                    IsEnabled="{Binding IsNotBusy}"
                    BackgroundColor="Transparent"
                    TextColor="{DynamicResource Primary}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
