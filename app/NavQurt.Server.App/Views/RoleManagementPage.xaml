<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavQurt.Server.App.Views.RoleManagementPage"
             Title="Roles">
    <VerticalStackLayout Padding="16" Spacing="12">
        <Button Text="Refresh" Command="{Binding LoadRolesCommand}" IsEnabled="{Binding IsNotBusy}" />
        <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding HasError}" />

        <CollectionView ItemsSource="{Binding Roles}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Padding="12" Margin="0,6" BorderColor="{DynamicResource Primary}">
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" FontAttributes="Bold" />
                            <Label Text="Id: {Binding Id}" FontSize="12" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
