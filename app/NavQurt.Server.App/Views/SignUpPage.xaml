<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavQurt.Server.App.Views.SignUpPage"
             Title="Sign Up">
    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="12">
            <Entry Placeholder="First name" Text="{Binding FirstName}" />
            <Entry Placeholder="Last name" Text="{Binding LastName}" />
            <Entry Placeholder="Username" Text="{Binding UserName}" />
            <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />
            <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" />
            <Entry Placeholder="Phone number" Text="{Binding PhoneNumber}" Keyboard="Telephone" />

            <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding HasError}" />

            <Button Text="Create account"
                    Command="{Binding SignUpCommand}"
                    IsEnabled="{Binding IsNotBusy}" />

            <Button Text="Back to login"
                    Command="{Binding NavigateToLoginCommand}"
                    BackgroundColor="Transparent"
                    TextColor="{DynamicResource Primary}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
